{
  "project": {
    "name": "mastering-golang",
    "type": "educational",
    "purpose": "Teaching Go programming fundamentals",
    "language": "go",
    "go_version": "1.21",
    "module": "github.com/hungvhau/mastering-golang"
  },
  "structure": {
    "pattern": "modular-educational",
    "entry_points": {
      "overview": "main.go",
      "demos": [
        "cmd/01-basics/main.go",
        "cmd/02-functions/main.go",
        "cmd/03-loops/main.go"
      ]
    },
    "learning_modules": {
      "basics": {
        "path": "basics/",
        "topics": ["variables", "operators", "conditionals"],
        "has_tests": true
      },
      "functions": {
        "path": "functions/",
        "topics": ["declarations", "scope", "closures", "higher-order", "defer", "methods"],
        "has_tests": true
      },
      "loops": {
        "path": "loops/",
        "topics": ["for-loops", "range", "break-continue", "patterns"],
        "has_tests": false
      }
    }
  },
  "conventions": {
    "documentation": "comprehensive inline comments explaining concepts",
    "naming": "CamelCase for exported, camelCase for unexported",
    "testing": "co-located *_test.go files",
    "examples": "executable demos in cmd/ directory"
  },
  "learning_path": [
    "main.go for overview",
    "cmd/01-basics/main.go",
    "cmd/02-functions/main.go",
    "cmd/03-loops/main.go"
  ],
  "ai_hints": {
    "focus": "educational clarity over performance",
    "comments": "preserve detailed explanatory comments",
    "examples": "provide runnable examples for new concepts",
    "progression": "maintain gradual complexity increase",
    "prompt_guides": {
      "bootstrap": ".ai/BOOTSTRAP.md",
      "detailed": ".ai/prompt-template.md",
      "quick": ".ai/QUICK_PROMPT_GUIDE.md",
      "usage": "AI_CONTEXT_GUIDE.md"
    }
  }
} 